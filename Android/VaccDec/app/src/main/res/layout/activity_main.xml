<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        tools:context="com.example.tarunkhajuria.vaccdec.Main"
        android:background="@drawable/vaccdecbackground">
        <ImageView
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/vaccdecblue"
            android:id="@+id/vaccdecimg"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connect"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90px"
            android:text="Connect"
            android:visibility="invisible"
            android:textSize="50px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sDevice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120px"
            android:text="Select Device"
            android:textSize="50px"/>

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/devicesltview"
            android:layout_below="@id/vaccdecimg">
        </ListView>

</RelativeLayout>


